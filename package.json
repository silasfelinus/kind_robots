{
  "name": "kind-robots",
  "private": true,
  "scripts": {
    "dev": "nuxt dev --host",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "lint": "npm run lint:js && npm run lint:prettier",
    "lint:js": "eslint --ext \".ts,.vue\" --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "lintfix": "eslint --fix --ext \".ts,.vue\" --ignore-path .gitignore . && prettier --write .",
    "prisma:studio": "npx prisma studio",
    "prisma:generate": "npx prisma generate && npm run prisma:inline",
    "prisma:migrate": "npx prisma migrate deploy && npm run prisma:inline",
    "prisma:migrate:dev": "npx prisma migrate dev && npm run prisma:inline",
    "prisma:inline": "cp ./node_modules/.prisma/client/*.js ./node_modules/@prisma/client",
    "postinstall": "npm run prisma:generate && nuxt prepare"
  },
  "devDependencies": {
    "@nuxt/content": "^2.6.0",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@nuxtjs/tailwindcss": "^6.7.0",
    "@tailwindcss/typography": "^0.5.9",
    "@types/bcrypt": "^5.0.0",
    "@types/canvas-confetti": "^1.6.0",
    "@types/node": "^20.2.3",
    "@unlok-co/nuxt-stripe": "^2.0.0",
    "bcrypt": "^5.1.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "latest",
    "nuxt": "latest",
    "nuxt-icon": "^0.4.1",
    "prettier": "^3.0.3",
    "prisma": "^5.4.2",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@interactjs/interact": "^1.10.17",
    "@interactjs/types": "^1.10.18",
    "@nuxtjs/axios": "^5.13.6",
    "@pinia/nuxt": "^0.4.11",
    "@prisma/client": "^5.4.2",
    "@stripe/stripe-js": "^2.1.7",
    "axios": "latest",
    "canvas-confetti": "^1.6.0",
    "daisyui": "latest",
    "gsap": "^3.12.2",
    "interactjs": "^1.10.18",
    "jose": "^4.14.6",
    "open-simplex-noise": "^2.5.0",
    "pinia": "^2.1.6",
    "stripe": "^13.4.0"
  },
  "overrides": {
    "vue": "latest"
  }
}
