{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "dom"],
    "jsx": "preserve",
    "types": ["@nuxt/types", "@types/node"],
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "components/**/*.vue",
    "components/**/*.ts",
    "stores/**/*.ts",
    "nuxt.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
